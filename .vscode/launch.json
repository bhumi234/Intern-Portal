{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Intern Portal",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector"
        }
    ]
} 